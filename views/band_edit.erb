<center><h1><b><u><%= @band.name() %></u></b></h1></center>
<br>
<br>
<form action="/band/<%= @band.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Update band's name</label>
  <input id="name" name="name" type="text">
  <button type="submit" class="btn btn-default">Update</button>
</form>
<br>
<br>
<h4>Select all venues where <%= @band.name %> has played:</h4>
<% if @venues.any?() %>
  <form action="/band/<%= @band.id %>/venues" method="post">
    <input type="hidden" name="_method" value="patch">
    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>
    <button type="submit" class="btn btn-default">Add Venues</button>
  </form>
<% else %>
  There are no venues available, dude. <a href="/venue/new">Add one now!</a>
<% end %>
<br>
